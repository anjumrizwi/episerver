@using EPiServer.Core
@using EPiServerDemoSite.Models.ViewModels
@using EPiServerDemoSite.Models.Pages

@model IPageViewModel<TwoColumnPage>
@{ Layout = "~/Views/Shared/_LayoutPage.cshtml"; }
<div class="row">
    <div class="span8">
        @RenderBody()
    </div>

    <div class="span4">
        @if (IsSectionDefined("RelatedContent"))
        {
            @RenderSection("RelatedContent")
        }
        else if (Model.CurrentPage is IHasRelatedContent)
        {
            @Html.PropertyFor(x => ((IHasRelatedContent)x.CurrentPage).RelatedContentArea)
        }
    </div>
</div>
